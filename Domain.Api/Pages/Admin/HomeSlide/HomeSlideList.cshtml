@page
@model Domain.Api.Pages.Admin.HomeSlide.HomeSlideListModel
@{
    Layout = "~/Pages/Admin/AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Home Slide</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Home Slides</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Home Slides</h3>

                <div class="card-tools">
                    <a class="btn btn-info btn-sm" href="/Admin/HomeSlide/CreateSlide">
                        <i class="fas fa-plus">
                        </i>
                        Create
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 10%">
                                Id
                            </th>
                            <th style="width: 30%">
                                Title
                            </th>
                            <th style="width: 40%">
                                Description
                            </th>
                            <th>
                                ImgPath
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slide in Model.HomeSlides)
                        {
                            <tr>
                            <td>
                                @slide.Id
                            </td>
                            <td>
                                <a>
                                    @slide.Title
                                </a>
                                <br />
                            </td>
                            <td>
                                <a>
                                    @slide.Description
                                </a>
                            </td>
                            <td>
                                <a>
                                    @slide.ImgPath
                                </a>
                            </td>
                            <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm"  href="/Admin/HomeSlide/CreateSlide?id=@slide.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                    <a class="btn btn-danger btn-sm" href="/Admin/HomeSlide/DeleteSlide?id=@slide.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>